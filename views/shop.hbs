<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop</title>
</head>
<body>
<div class="row">
  {{#if data.post}}
  <div class="col-md-8">
    <article>
      <h2>{{data.post.title}}</h2>
      <img src="{{data.post.featureImage}}" alt="{{data.post.title}}" class="img-fluid mb-3" />
      <p><strong>Category:</strong> {{data.post.category}}</p>
      <p><strong>Price:</strong> ${{data.post.price}}</p>
      <p><strong>Last Updated:</strong> {{data.post.postDate}}</p>
      <br /><br />
      <p>{{#safeHTML data.post.body}}{{/safeHTML}}</p>
      <br /><br />
    </article>
  </div>
  {{/if}}

  <div class="col-md-4">
    {{#if data.items}}
    <h4>Items</h4>
    <ul class="list-group mb-4">
      {{#each data.items}}
      <li class="list-group-item">
        <a href="/shop/{{id}}?category={{../data.viewingCategory}}">{{title}}</a>
      </li>
      {{/each}}
    </ul>
    {{/if}}

    {{#if data.categories}}
    <h4>Categories</h4>
    <ul class="list-group">
      {{#each data.categories}}
      <li class="list-group-item">
        <a href="/shop?category={{id}}">{{category}}</a>
      </li>
      {{/each}}
    </ul>
    {{/if}}
  </div>

  {{#unless data.post}}
  <div class="col-md-12 text-center">
    <h2>{{data.message}}</h2>
    <p>Please try another Post / Category</p>
  </div>
  {{/unless}}
</div>



</body>
</html>



